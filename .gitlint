# ---------------------------------------------------------------------------- #
#               ------- General ------
# ---------------------------------------------------------------------------- #
[general]
# Ignore rules, reference them by id or name (comma-separated)
ignore=body-is-missing

# verbosity should be a value between 1 and 3
verbosity = 3

# By default gitlint will ignore certain commits
ignore-merge-commits=true
ignore-revert-commits=true
ignore-fixup-commits=true
ignore-fixup-amend-commits=true
ignore-squash-commits=true

# Ignore any data sent to gitlint via stdin
ignore-stdin=true

# Fetch additional meta-data from the local repository when manually passing a
# commit message to gitlint via stdin or --commit-msg.
# (default=false)
staged=false

# Hard fail when the target commit range is empty.
fail-without-commits=true

# Whether to use Python `search` instead of `match` semantics in rules
regex-style-search=true

# Enable community contributed rules
contrib=contrib-title-conventional-commits

# Set the extra-path where gitlint will search for user defined rules #
# extra-path=examples/

# ---------------------------------------------------------------------------- #
#               ------- Built-in Rules Configuration ------
# ---------------------------------------------------------------------------- #

# Title
[title-max-length]
# (default=72)
line-length=50

[title-min-length]
# (default=5)
min-length=5

[title-must-not-contain-word]
# Comma-separated and case-insensitive list of words that should not occur in the commit message title
# (default: "WIP")
words=wip

# [title-match-regex]
# Ensure every title starts with a user-story identifier like US123
# (default: .*)
# regex=^US[0-9]*


# Body
[body-max-line-length]
# (default=80)
line-length=72

[body-min-length]
# (default=20)
min-length=0

[body-is-missing]
# Ignore this rule on merge commits
# (default=true)
ignore-merge-commits=true

# [body-changed-file-mention]
# Files that need to be explicitly mentioned in the body when they change
# (default=empty)
# files=README.md

# [body-match-regex]
# Body must match a given regex
# (default=empty)
# regex=Reviewed-By:(.*)$


# Author
[author-valid-email]
# Only allow email addresses from those domains
# (default=[^@ ]+@[^@ ]+.[^@ ]+)
regex=[^@]+@(forsk|users.noreply.github).com


# Ignore
# [ignore-by-title]
# Ignore rules for commits of which the title matches a regex
# (default=empty)
# regex=^Release(.*)
# (default="all")
# ignore=T1,body-min-length

# [ignore-by-body]
# Ignore rules for commits of which the body has a line that matches a regex
# (default=empty)
# regex=(.*)release(.*)
# (default="all")
# ignore=T1,body-min-length

# [ignore-body-lines]
# Ignore all lines that start with 'Co-Authored-By'
# (default=empty)
# regex=^Co-Authored-By

# [ignore-by-author-name]
# (default=empty)
# regex=(.*)dependabot(.*)
# (default="all")
# ignore=T1,body-min-length

# ---------------------------------------------------------------------------- #
#               ------- Community-contributed rules ------
# ---------------------------------------------------------------------------- #
# https://jorisroovers.com/gitlint/latest/rules/contrib_rules

[contrib-title-conventional-commits]
# (default: build,ci,chore,docs,feat,fix,perf,refactor,revert,style,test)
types = build,chore,ci,docs,feat,fix,perf,refactor,revert,style,test

# ---------------------------------------------------------------------------- #
#               ------- Named rules ------
# ---------------------------------------------------------------------------- #
# https://jorisroovers.com/gitlint/latest/rules/named_rules/

# [title-must-not-contain-word:extra-words]
# words=foo,bar

# ---------------------------------------------------------------------------- #
#               ------- User defined rules ------
# ---------------------------------------------------------------------------- #
# [body-max-line-count]
# max-line-count = 5
